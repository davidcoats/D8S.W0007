
<PageTitle>@Instances.PageTitles.For_OurStory</PageTitle>

<Container>
    <div class="relative isolate bg-gray-900 px-6 py-48 lg:py-32 rounded">
        <div class="lg:mx-72 absolute -z-10 inset-0">
            <img src="@Instances.Urls.Image_ForOurStory_Banner" alt="" class="h-full w-full object-cover">
        </div>

        <div class="absolute lg:static top-0 lg:top-auto left-0 lg:left-auto max-w-lg pl-4 lg:pl-12 pt-4 lg:pt-0">
            <h2 class="text-4xl font-bold tracking-tight text-white sm:text-6xl">Our Story</h2>
        </div>
    </div>

    <div class="mt-6 lg:mt-12">
        <p class="text-3xl font-bold tracking-tight text-gray-900">Our story begins in India...</p>
    </div>

    <div>
        @* Info element. *@
        <OurStoryThreeColumnSection />
    </div>

    <div class="pt-16 pb-6">
        <div class="relative">
            <div class="absolute inset-0 flex items-center" aria-hidden="true">
                <div class="w-full border-t border-gray-300"></div>
            </div>
            <div class="relative flex justify-center">
                <span class="bg-white px-2 text-sm text-gray-500">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" class="mx-auto size-6">
                        <path strokeLinecap="round" strokeLinejoin="round" d="m4.5 15.75 7.5-7.5 7.5 7.5" />
                    </svg>
                    Care
                </span>
            </div>
        </div>
    </div>
</Container>


@code{
    /// <summary>
    /// Documentation will not appear for this component in consumer Razor files unless there is some sort of documentation in the Razor markup.
    /// Documentation for the component is in the code-behind file.
    /// </summary>
    [Parameter]
    public string DummyDocumentationParameter { get; set; }
}
